@model EmployeeResponse

@{
    ViewData["Title"] = "Delete";
}

<h1 class="page-header">Delete the employee on the System</h1>
<h3 class="text-center">Are you sure you want to delete this?</h3>
<hr />
<div class="text-center">
    
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.FullName)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.FullName)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.DepartmentName)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.DepartmentName)</dd>

        <dt class = "col-sm-2">@Html.DisplayNameFor(model => model.WorkEmail)</dt>
        <dd class = "col-sm-10">@Html.DisplayFor(model => model.WorkEmail)</dd>

        <dt class = "col-sm-2">@Html.DisplayNameFor(model => model.Enrollment)</dt>
        <dd class = "col-sm-10">@Html.DisplayFor(model => model.Enrollment)</dd>

        <dt class = "col-sm-2">@Html.DisplayNameFor(model => model.OfficeName)</dt>
        <dd class = "col-sm-10">@Html.DisplayFor(model => model.OfficeName)</dd>

       
    </dl>
    
    <form class="mt-3" asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger btn-shape" /> |
        <a class="btn btn-success btn-shape"  asp-action="Index">Back to List</a>
    </form>
</div>
