@model UserResponse

@{
    ViewData["Title"] = "Delete";
}


<h1 class="page-header">Deleting User on the System</h1>
<h3 class="text-center">Are you sure you want to delete this?</h3>
<hr/>
<div class="text-center">
    <dl class="row">
        <dt class = "col-sm-2">@Html.DisplayNameFor(model => model.FullName)</dt>
        <dd class = "col-sm-10">@Html.DisplayFor(model => model.FullName)</dd>

        <dt class = "col-sm-2">@Html.DisplayNameFor(model => model.Department)</dt>
        <dd class = "col-sm-10">@Html.DisplayFor(model => model.Department)</dd>

        <dt class = "col-sm-2">@Html.DisplayNameFor(model => model.Office)</dt>
        <dd class = "col-sm-10"> @Html.DisplayFor(model => model.Office)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Email)</dt>
        <dd class="col-sm-10"> @Html.DisplayFor(model => model.Email)</dd>
        
    </dl>
    
    
    <form class="mt-5" asp-action="Delete">
        <input type="hidden" asp-for="UserId" />
        <input type="submit" value="Delete" class="btn btn-danger btn-shape" /> |
        <a class="btn btn-success btn-shape" asp-action="Index">Back to List</a>
    </form>
</div>
